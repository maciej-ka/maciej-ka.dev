{
  "name": "skills portfolio",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "build": "tsc -b && vite build",
    "debug:docker": "docker build -t skills-portfolio . && docker run --rm -it skills-portfolio bash",
    "eslint:fix": "eslint . --fix",
    "prettier:fix": "prettier --write --list-different .",
    "start": "vite",
    "start:docker": "docker build -t skills-portfolio . && docker run --rm -p 8000:80 skills-portfolio",
    "test": "npm run test:prettier && npm run test:eslint && npm run test:typescript && npm run test:integration",
    "test:eslint": "eslint .",
    "test:integration": "playwright test",
    "test:integration:ui": "playwright test --ui",
    "test:prettier": "prettier --check .",
    "test:typescript": "tsc --noEmit"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@playwright/test": "^1.49.1",
    "@types/node": "^22.10.5",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.17.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^15.14.0",
    "prettier": "^3.4.2",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.18.2",
    "vite": "^6.0.5"
  }
}
